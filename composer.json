{
  "name": "phpflo/phpflo",
  "type": "library",
  "description": "Flow-based programming for PHP",
  "keywords": ["fbp", "flow", "flow based programming"],
  "homepage": "https://github.com/bergie/phpflo",
  "license": "MIT",
  "authors": [
    {
      "name": "Henri Bergius",
      "email": "henri.bergius@iki.fi",
      "homepage": "http://bergie.iki.fi/"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "evenement/evenement": "^2.0",
    "psr/container": "^1.0",
    "psr/log": "^1.0"
  },
  "replace": {
    "phpflo/phpflo-fbp": "self.version",
    "phpflo/phpflo-common": "self.version",
    "phpflo/phpflo-flowtrace": "self.version"
  },
  "autoload": {
    "psr-4": { "PhpFlo\\": "src/PhpFlo/" },
    "exclude-from-classmap": [ "**/Tests/" ]
  },
  "config": {
    "bin-dir": "bin",
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "autoloader-suffix": "PhpFloAutoloader",
    "platform": {
      "php": "7.0.0"
    }
  }
}
