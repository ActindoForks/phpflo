{
    "name": "phpflo/phpflo",
    "type": "library",
    "description": "Flow-based programming for PHP",
    "keywords": ["fbp", "flow"],
    "homepage": "https://github.com/bergie/phpflo",
    "license": "MIT",
    "authors": [
        {
            "name": "Henri Bergius",
            "email": "henri.bergius@iki.fi",
            "homepage": "http://bergie.iki.fi/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "evenement/evenement": "~2.0",
        "phpflo/phpflo-core": "dev-master",
        "phpflo/phpflo-fbp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "<5.0"
    },
    "autoload": {
        "psr-4": {
            "": "lib/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:phpflo/phpflo-fbp.git"
        },
        {
            "type": "git",
            "url": "git@github.com:phpflo/phpflo-core.git"
        }
    ]
}
